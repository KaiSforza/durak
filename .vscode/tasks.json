{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": { 
                "kind": "build",
                "isDefault": true
            },
            "label": "tsc-build",
            "dependsOn": [
                "npm i"
            ],
            "runOptions":
                {
                    "runOn": "default"
                }
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "label": "tsc-watch",
            "dependsOn": [
                "npm i"
            ]
        },
        {
            "type": "shell",
            "group": "build",
            "label": "npm i",
            "command": "npm",
            "args": ["install"]
        },
    ]
}